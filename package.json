{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "runserver": "go run main/main.go",
    "start": "yarn workspace client start",
    "build": "yarn workspace client build",
    "docker:build": "docker build --tag ctrlmaniac/me:latest .",
    "collectclient": "bash collectclient.sh",
    "precollectclient": "yarn run build",
    "postcollectclient": "git add -A && git commit -m \"collected client\" && git push"
  },
  "devDependencies": {
    "lerna": "^5.5.0"
  }
}
